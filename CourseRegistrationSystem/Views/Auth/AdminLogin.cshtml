@model CourseRegistrationSystem.ViewModels.AuthAdminLogin

@{
    ViewBag.Title = "Admin Login";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Administrator Login</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(x => x.Username, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(x => x.Username, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Password, new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.EditorFor(x => x.Password, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-10 col-sm-offset-2">
                                <input class="btn btn-default" type="submit" value="Login" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>