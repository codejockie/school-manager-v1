@using System.Web.Optimization

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - CourseRegistrationSystem</title>

    @Styles.Render("~/styles")
</head>
<body>
    <header>
        <h1>
            <a href="@Url.RouteUrl("home")">Online Course Registration System</a>
        </h1>
        @if (User.Identity.IsAuthenticated)
        {
            <p>Welcome back, @User.Identity.Name</p>
            <a href="@Url.RouteUrl("logout")">Logout</a>

            if (User.IsInRole("admin"))
            {
                <a href="@Url.Action("index", "Users", new { area = "admin" })">View users in admin</a>
            }
        }
        else
        {
            <a href="@Url.RouteUrl("login")">Login</a>
        }
    </header>
    
    @RenderBody()

    <footer>
        &copy; @DateTime.UtcNow.Year - Me
    </footer>

    @Scripts.Render("~/scripts")
    @RenderSection("Scripts", false)
</body>
</html>
