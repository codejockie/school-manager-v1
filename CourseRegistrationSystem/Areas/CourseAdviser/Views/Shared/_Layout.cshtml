@{
    Layout = null;
}

@helper SelectedTabClass(string tabName)
{
    if (tabName == ViewBag.SelectedTab)
    {
        @: active
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title - Sands University</title>

    @Styles.Render("~/admin/styles")
</head>
<body>

    <div class="container">
        <ul class="nav nav-tabs">
            <li class="@SelectedTabClass("courses")">
                @Html.ActionLink("Courses", "index", "courses", new { area = "courseadviser" }, new { })
            </li>
            <li class="@SelectedTabClass("students")">
                @Html.ActionLink("Students", "index", "students", new { area = "courseadviser" }, new { })
            </li>
            <li class="pull-right">
                @Html.RouteLink("Back to website", "home")
            </li>
            <li class="pull-right">
                @Html.RouteLink("Logout", "adminlogout")
            </li>
        </ul>
        @{ Html.RenderPartial("_Alerts"); }

        @RenderBody()
    </div>

    @Scripts.Render("~/admin/scripts")
    @RenderSection("Scripts", false)
</body>
</html>
