@model CourseRegistrationSystem.Areas.CourseAdviser.ViewModels.CoursesAddInfo

@{
    ViewBag.Title = "Course Advice";
}

<h2>Add Course Advice for</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>@Html.DisplayTextFor(x => x.CourseCode) @Html.DisplayTextFor(x => x.CourseTitle)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.CourseInfo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CourseInfo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CourseInfo, "", new { @class = "text-danger" })
            </div>
            <span class="pull-right" id="char-count"></span>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}

