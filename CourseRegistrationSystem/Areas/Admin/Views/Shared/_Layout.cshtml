@using System.Web.Optimization

@{
    Layout = null;
}

@helper SelectedTabClass(string tabName)
{
    if (tabName == ViewBag.SelectedTab)
    {
        @: active
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CourseRegistrationSystem Admin</title>

    @Styles.Render("~/admin/styles")
</head>
<body>

    <div class="container">
        <ul class="nav nav-pills">
            <li class="@SelectedTabClass("users")">
                @Html.ActionLink("Users", "Index", "Users", new { area = "admin" }, new { })
            </li>
            <li class="@SelectedTabClass("courses")">
                @Html.ActionLink("Courses", "Index", "Courses", new { area = "admin" }, new { })
            </li>
            <li class="pull-right">
                @Html.RouteLink("Back to website", "home")
            </li>
            <li class="pull-right">
                @Html.RouteLink("Logout", "adminlogout")
            </li>
        </ul>

        @RenderBody()
    </div>

    @Scripts.Render("~/admin/scripts")
    @RenderSection("Scripts", false)

    <form class="hidden" id="anti-forgery-form">
        @Html.AntiForgeryToken()
    </form>
</body>
</html>
